{
  "expo": {
    "name": "BotlerFly",
    "slug": "botlerfly-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "botlerfly",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1B2A4A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.botler360.botlerfly",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "BotlerFly needs microphone access for voice check-ins"
      }
    },
    "android": {
      "package": "com.botler360.botlerfly",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1B2A4A"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["RECORD_AUDIO"]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#E8943A"
        }
      ]
    ]
  }
}
